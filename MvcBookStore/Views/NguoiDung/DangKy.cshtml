@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">ĐĂNG KÝ THÀNH VIÊN</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("DangKy", "NguoiDung"))
        {
            @Html.ValidationSummary(true)

            <div class="form-group" style="margin-left: 200px;">
                <label for="name">Họ và Tên:</label>
                @Html.TextBox("HoTenKH", null, new { @class = "form-control", @id = "name", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("TenDN", null, new { @class = "form-control", @id = "dangnhap", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="matkhau">Mat khau:</label>
                @Html.Password("Matkhau", null, new { @class = "form-control", @id = "matkhau", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="email">Email:</label>
                @Html.TextBox("Email", null, new { @class = "form-control", @id = "email", type = "email", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="diachi">Địa chỉ:</label>
                @Html.TextBox("DiachiKH", null, new { @class = "form-control", @id = "diachi" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="dienthoai">Điện thoại:</label>
                @Html.TextBox("DienthoaiKH", null, new { @class = "form-control", @id = "dienthoai", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="ngaysinh">Ngày sinh:</label>
                @Html.TextBox("Ngaysinh", null, new { @class = "form-control", @id = "ngaysinh", type = "date", placeholder = "mm/dd/yyyy" })
            </div>

            <div class="dk123" style="text-align:center; margin-top:40px;">
                <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
            </div>
        }
    </div>
</div>

