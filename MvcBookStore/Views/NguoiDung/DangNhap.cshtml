
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">ĐĂNG NHẬP</h2>
<br />
<div class="row">

    <div class="offset-md-1 col-md-10">
        <h2 style="color:red; margin-left:100px;">@ViewBag.ThongBao</h2>
        @using (Html.BeginForm("DangNhap", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group" style="margin-top: 20px; margin-left:200px;">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("TenDN", null, new { @class = "form-control", @id = "dangnhap", required = "required" })
            </div>

            <div class="form-group" style="margin-top: 20px; margin-left: 200px;">
                <label for="matkhau">Mật khẩu:</label>
                @Html.Password("Matkhau", null, new { @class = "form-control", @id = "matkhau", required = "required" })
            </div>

            <div class="dn123" style="text-align:center; margin-top:40px;">
                <button type="submit" class="btn btn-primary">ĐĂNG NHẬP</button>
            </div>
        }
    </div>
</div>

