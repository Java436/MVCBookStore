@using MvcBookStore.Models
@using PagedList.Mvc
@model PagedList.PagedList<NHAXUATBAN>

@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ NHÀ XUẤT BẢN</h2>

<p>
    @Html.ActionLink("Thêm NXB", "ThemNXB")
</p>

<table class="table" border="1">
    <tr>
        <th class="col-lg-3">
            TÊN NXB
        </th>
        <th class="col-lg-2">
            Điện thoại
        </th>
        <th class="col-lg-6">
            Địa chỉ
        </th>

        <th class="col-lg-1" style="width: 150px;"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>

            <td style="width: 150px;">
                @Html.ActionLink("SỬA", "SuaChuDe", new { id = item.MaNXB }) |

                @Html.ActionLink("XÓA", "XoaChuDe", new { id = item.MaNXB })
            </td>
        </tr>
    }
</table>

<!-- Thêm mã phân trang -->
<br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("NhaXuatBan", new { page }))
    </div>

    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
    <!-- Kết thúc -->