@using MvcBookStore.Models
@using PagedList.Mvc
@model PagedList.PagedList<CHUDE>

@{
    ViewBag.Title = "Sach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>QUẢN LÝ CHỦ ĐỀ</h2>
<p>
    @Html.ActionLink("Thêm Chủ Đề", "ThemChuDe")
</p>
<table class="table" border="1">
    <tr>
        <th>
            Tên Chủ Đề
        </th>
        <th style="width: 150px;"></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChuDe)
            </td>
            <td style="width: 150px;">
                @Html.ActionLink("SỬA", "SuaChuDe", new { id = item.MaCD }) |

                @Html.ActionLink("XÓA", "XoaChuDe", new { id = item.MaCD })
            </td>
        </tr>
    }
</table>

<!-- Thêm mã phân trang -->
<br />
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("ChuDe", new { page }))
    </div>

    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
    <!-- Kết thúc -->